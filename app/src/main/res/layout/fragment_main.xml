<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ecube.solutions.ecube.MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ecube.solutions.ecube.widgets.TextInputLayoutAppWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inputMode="password_define"
            app:errorColorTyping="@color/md_lime_500"
            app:errorColorFinal="@color/md_red_500"
            app:hasShadow="false"
            app:hint="password"
            android:id="@+id/custonTextInputLayout"/>
        <com.ecube.solutions.ecube.widgets.TextInputLayoutAppWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorColorTyping="@color/md_lime_500"
            app:errorColorFinal="@color/md_red_500"
            app:hint="email"
            app:hasShadow="false"
            app:inputMode="email"
            android:id="@+id/customTextInputLayout2"/>


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="WAIT"
            android:id="@+id/buttonWait"
            android:layout_below="@+id/buttonAdd"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="sergi.redorta@hotmail.com"
            android:layout_marginBottom="40dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ADD ACCOUNT"
            android:id="@+id/buttonAdd"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRM CREDENTIALS"
            android:id="@+id/buttonConfirm"
            android:layout_below="@+id/buttonAdd"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="GET AUTH TOKEN"
            android:id="@+id/buttonGetAuthToken"
            android:layout_below="@+id/buttonAdd"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE CREDENTIALS"
            android:id="@+id/buttonUpdateCredentials"
            android:layout_below="@+id/buttonAdd"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="REMOVE ALL ACCOUNTS"
            android:id="@+id/buttonRemoveAll"
            android:layout_below="@+id/buttonAdd"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="RESTORE ACCOUNT"
            android:id="@+id/buttonRestore"
            android:layout_below="@+id/buttonAdd"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

    </LinearLayout>

</LinearLayout>
