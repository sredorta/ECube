<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andoid="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/profile_create_names_cardView_main"
    android:layout_gravity="top"
    android:layout_margin="10dp"
    style="?attr/cardStyle">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:padding="10dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="What's your name ?"
    android:id="@+id/profile_create_names_title"
    android:layout_gravity="center"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Other users will see this names, so please use real names"
    android:id="@+id/profile_create_names_text"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:gravity="center_horizontal" />

    <com.ecube.solutions.ecube.widgets.TextInputLayoutAppWidget
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inputMode="name"
        app:hasShadow="false"
        app:hint="First name"
        android:id="@+id/profile_create_names_TextInputLayoutAppWidget_firstName"
        android:layout_gravity="center_horizontal" />
    <com.ecube.solutions.ecube.widgets.TextInputLayoutAppWidget
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inputMode="name"
        app:hasShadow="false"
        app:hint="Last name"
        android:id="@+id/profile_create_names_TextInputLayoutAppWidget_lastName"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="NEXT"
    android:id="@+id/profile_create_names_button"
    android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>
</android.support.v7.widget.CardView>