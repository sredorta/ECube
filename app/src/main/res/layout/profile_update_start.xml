<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp">
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_update_header_cardView"
    android:layout_gravity="top"
    card_view:cardCornerRadius="0dp"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:elevation="12dp"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:gravity="top"
        android:baselineAligned="false"
        android:background="@color/md_lime_50">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/profile_update_start_avatar_cardView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:elevation="12dp"
                android:focusable="false"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/profile_update_start_ImageView_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_user_default"></ImageView>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_update_start_TextView_name_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="center_horizontal"
                android:text="test"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_update_start_TextView_email_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom|center_horizontal"
                android:gravity="center_horizontal"
                android:text="test@email"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/profile_update_start_TextView_phone_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom|center_horizontal"
                android:gravity="center_horizontal"
                android:text="myphone"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/profile_update_start_TextView_creation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:textColor="@color/md_lime_700"
                android:text="Created on :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/profile_update_start_TextView_creation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_lime_700"
                android:gravity="bottom"
                android:text="test"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_update_start_email_cardView"
        android:layout_gravity="top"
        card_view:cardCornerRadius="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:elevation="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">
                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:layout_margin="20dp"
                    android:id="@+id/profile_update_start_ImageView_email"
                    android:src="@drawable/icon_settings_email"
                    android:scaleType="fitXY"
                    android:layout_gravity="center">
                </ImageView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Change account email"
                android:id="@+id/profile_update_start_TextView_email_change"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:id="@+id/profile_update_start_phone_cardView"
android:layout_gravity="top"
card_view:cardCornerRadius="0dp"
android:layout_marginBottom="1dp"
android:layout_marginLeft="0dp"
android:layout_marginRight="0dp"
android:elevation="12dp"
android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="top">
    <ImageView
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_margin="20dp"
        android:id="@+id/profile_update_start_ImageView_phone"
        android:src="@drawable/icon_settings_phone"
        android:scaleType="fitXY"
        android:layout_gravity="center">
    </ImageView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Change account phone"
        android:id="@+id/profile_update_start_TextView_phone"
        android:layout_weight="1"
        android:layout_gravity="center_vertical" />
</LinearLayout>
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_update_start_password_cardView"
        android:layout_gravity="top"
        card_view:cardCornerRadius="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:elevation="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_margin="20dp"
                android:id="@+id/profile_update_start_ImageView_password"
                android:src="@drawable/icon_settings_password"
                android:scaleType="fitXY"
                android:layout_gravity="center">
            </ImageView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Change account password"
                android:id="@+id/profile_update_start_TextView_password"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_update_access_cardView"
        android:layout_gravity="top"
        card_view:cardCornerRadius="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:elevation="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_margin="20dp"
                android:id="@+id/profile_update_start_ImageView_access"
                android:src="@drawable/icon_settings_account"
                android:scaleType="fitXY"
                android:layout_gravity="center">
            </ImageView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Change account type"
                android:id="@+id/profile_update_start_TextView_access"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>