<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:focusableInTouchMode="true">
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:id="@+id/profile_signin_with_phone_cardView_main"
android:layout_gravity="top"
android:layout_margin="10dp"
style="?attr/cardStyle"
    android:layout_weight="2">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:padding="10dp"    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/profile_signin_multiple_title"
        android:id="@+id/profile_signin_with_phone_title"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/profile_signin_phone_content"
        android:id="@+id/profile_signin_with_phone_text"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal" />

    <include
        android:id="@+id/profile_create_phone_country_display"
        layout="@layout/profile_create_country_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <com.ecube.solutions.ecube.widgets.TextInputLayoutAppWidget
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inputMode="phone"
        app:hasShadow="false"
        app:hint="@string/common_strings_phone"
        android:id="@+id/profile_signin_with_phone_TextInputLayoutAppWidget_phone"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />
    <com.ecube.solutions.ecube.widgets.TextInputLayoutAppWidget
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inputMode="password_confirm"
        app:hasShadow="false"
        app:hint="@string/common_strings_password"
        android:id="@+id/profile_signin_with_phone_TextInputLayoutAppWidget_password"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
</android.support.v7.widget.CardView>
<LinearLayout
android:orientation="vertical"
android:layout_width="0dp"
android:layout_height="match_parent"
android:gravity="center_vertical|center_horizontal"
android:layout_gravity="center_vertical"
    android:layout_weight="1">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_strings_next"
        android:id="@+id/profile_signin_with_phone_Button_submit"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />
<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/profile_signin_with_email"
    android:id="@+id/profile_signin_with_phone_TextView_use_email"
    android:alpha="0.8"
    android:gravity="center_vertical|center_horizontal"
    android:layout_margin="10dp" />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/account_common_strings_forgot_password"
    android:id="@+id/profile_signin_with_phone_TextView_forgot_password"
    android:alpha="0.8"
    android:gravity="center_vertical|center_horizontal"
    android:layout_margin="10dp" />

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/account_common_strings_create_account"
    android:id="@+id/profile_signin_with_phone_TextView_create"
    android:alpha="0.8"
    android:gravity="center_vertical|center_horizontal"
    android:layout_margin="10dp" />

</LinearLayout>
</LinearLayout>